{
  "name": "@eco/ecoism",
  "version": "0.0.1",
  "description": "The Ecoism protocol is a decentralized intent based system that allows users to submit their intent to the network and have it fulfilled by a solver on the destination rollup of their choise.",
  "engines": {
    "node": ">=18.17.0"
  },
  "homepage": "https://github.com/eco/ecoism#readme",
  "bugs": {
    "url": "https://github.com/eco/ecoism/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eco/ecoism.git"
  },
  "author": "Eco Engineering <eng@eco.com>",
  "license": "MIT",
  "keywords": [
    "solidity",
    "ethereum",
    "ecoism",
    "bend",
    "protocol",
    "rollup",
    "solver"
  ],
  "scripts": {
    "format": "concurrently 'npm:format:*'",
    "format:eslint": "eslint --fix --ext .js,.ts,.tsx .",
    "format:prettier": "prettier --write .",
    "formatSol": "solhint --fix contracts/**/*.sol",
    "depcheck": "depcheck --ignore-bin-package --ignores @openzeppelin/contracts,@openzeppelin/contracts-upgradeable,prettier-plugin-solidity,solhint-plugin-eco,concurrently,@types/mocha",
    "lint": "yarn format",
    "build": "hardhat compile",
    "test": "hardhat test",
    "clean": "hardhat clean",
    "docgen": "hardhat docgen",
    "testGas": "ENABLE_GAS_REPORT=1 hardhat test",
    "testParallel": "hardhat test --parallel",
    "snapshots": "UPDATE_SNAPSHOT=1 hardhat test",
    "debug": "hardhat test",
    "coverage": "IS_COVERAGE=1 hardhat coverage",
    "coverageReport": "IS_COVERAGE=1 hardhat coverage; cd coverage; python3 -m http.server 7800",
    "prepack": "npm run build",
    "callGraph": "slither . --print call-graph; dot all_contracts.call-graph.dot -Tpng -o ./docs/slither/call-graph.png; rm *.call-graph.dot",
    "inheritanceGraph": "slither . --print inheritance-graph; dot inheritance-graph.dot -Tpng -o ./docs/slither/inheritance-graph.png; rm inheritance-graph.dot",
    "variableOrder": "slither --print variable-order . 2>&1 | sed -r 's/\\x1B\\[([0-9]{1,3}(;[0-9]{1,2};?)?)?[mGK]//g' | tee  ./docs/slither/variable-order.txt",
    "vulnerability": "slither . --exclude-informational --exclude-low --exclude-medium 2>&1 | sed -r 's/\\x1B\\[([0-9]{1,3}(;[0-9]{1,2};?)?)?[mGK]//g' | tee  ./docs/slither/vulnerability.txt",
    "contractSummary": "slither --print contract-summary . 2>&1 | tee ./docs/slither/contract-summary.txt",
    "deployInbox": "hardhat run --network mainnetOptimismBlockscout scripts/deploy-inbox.ts",
    "fulfillIntent": "hardhat run --network mainnetOptimismBlockscout scripts/fulfill-intent.ts",
    "deploySourceAndProver": "hardhat run --network sepoliaOptimismBlockscout scripts/deployIntentSource.ts"
  },
  "files": [
    "contracts/**.sol",
    "build/contracts/**.json"
  ],
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.5",
    "@eth-optimism/contracts-bedrock": "^0.17.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.2",
    "@nomicfoundation/hardhat-viem": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/hardhat-upgrades": "^3.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@wagmi/cli": "^2.0.0-rc.3",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-chai": "^0.0.1",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^6.9.0",
    "hardhat": "^2.22.4",
    "hardhat-change-network": "^0.0.7",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.1",
    "solhint": "^4.0.0",
    "solhint-plugin-eco": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.2",
    "typescript": ">=4.5.0",
    "viem": "^2.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  }
}

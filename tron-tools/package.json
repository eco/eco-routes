{
  "name": "@eco/tron-tools",
  "version": "1.0.0",
  "description": "Comprehensive toolkit for Tron blockchain deployment and interaction",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "deploy:portal-and-layerzeroprover": "npx ts-node scripts/deploy-portal-and-layerzeroprover.ts",
    "deploy:mainnet": "npx ts-node scripts/deploy-portal-and-layerzeroprover.ts mainnet",
    "deploy:testnet": "npx ts-node scripts/deploy-portal-and-layerzeroprover.ts testnet",
    "deploy:layerzeroprover": "npx ts-node scripts/deploy-layerzeroprover.ts",
    "deploy:layerzeroprover:mainnet": "npx ts-node scripts/deploy-layerzeroprover.ts mainnet",
    "deploy:layerzeroprover:testnet": "npx ts-node scripts/deploy-layerzeroprover.ts testnet"
  },
  "keywords": [
    "tron",
    "blockchain",
    "smart-contracts",
    "tronweb",
    "tronzap",
    "energy",
    "bandwidth"
  ],
  "author": "Eco Protocol",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bn.js": "^5.2.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "tronweb": "^5.3.2",
    "tronzap-sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}

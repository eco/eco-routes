{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts"],
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "*.sol",
      "options": {
        "printWidth": 90,
        "tabWidth": 4
      }
    }
  ],
  "semi": false
}

pragma solidity ^0.8.27;

import "forge-std/Script.sol";

/**
 * @title EstimatePolymerValidateGas
 * @notice Estimates gas cost for calling PolymerProver.validate() on Mainnet
 */
contract EstimatePolymerValidateGas is Script {
    // Mainnet PolymerProver
    address constant POLYMER_PROVER_MAINNET = 0xCf05B59f445a0Bb49061B1919bA3c7577034cC6F;

    // The proof bytes from the Optimism transaction
    bytes constant PROOF = hex"
";

    function run() external {
        console.log("=== Estimating Gas for PolymerProver.validate() ===");
        console.log("Contract:", POLYMER_PROVER_MAINNET);
        console.log("Proof size:", PROOF.length, "bytes");
        console.log("");

        // Estimate gas using staticcall
        uint256 gasBefore = gasleft();

        (bool success, ) = POLYMER_PROVER_MAINNET.staticcall(
            abi.encodeWithSignature("validate(bytes)", PROOF)
        );

        uint256 gasUsed = gasBefore - gasleft();

        console.log("Staticcall success:", success);
        console.log("Gas used (staticcall estimate):", gasUsed);
        console.log("");

        // Also try to get actual gas from a simulation
        console.log("For more accurate estimate, run:");
        console.log("cast estimate --rpc-url mainnet 0xCf05B59f445a0Bb49061B1919bA3c7577034cC6F \"validate(bytes)\" <proof>");
    }
}
